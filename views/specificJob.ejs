<%- include('header.ejs', {user: user}) %>

<div class="container">
    <div class="row">
        <% if(user.username == "admin") { %>
        <div class="d-flex">
            <form action="/jobs/<%- data._id %>" method="post">
                <button class="btn btn-danger">Delete</button>
            </form>
            <form action="/jobs/edit/<%- data._id %>" class="ms-3" method="get">
                <button class="btn btn-warning">Edit</button>
            </form>
        </div>
        <% } %>
        <div class="job_container col-12 col-md-6">
            <h2 class="SJtitle"><%- data.title %></h2>
            <h3 class="SJposition"><%- data.designation %></h3>
            <p class="SJsalary">
                Salary - <%- data.salaryMin %>rs to <%-data.salaryMax %>rs
            </p>
            <p class="SJlocation">Location - <%- data.location %></p>
            <p class="SJtime">
                Time - <%- data.timeStart %> to <%-data.timeEnd %>
            </p>
            <p class="SJqualification">Qualifications :</p>
            <ul class="SJqualification">
                <% data.qualification.forEach(element => { %>
                <li class="SJli"><%- element %></li>
                <% }); %>
            </ul>
        </div>
        <div class="col-1"></div>
        <div class="col-12 col-sm-10 col-md-5">
            <div class="apply_form">
                <p class="apply_text">Apply now!!</p>
                <form
                    action="/email/apply/<%- data._id %>"
                    method="post"
                    class="d-flex flex-column justify-content-between apllyForm"
                >
                    <div class="w-100">
                        <input
                            type="text"
                            required
                            name="fName"
                            class="applyInput w-100"
                        />
                        <div class="applyLabel">Full name</div>
                    </div>
                    <div class="w-100">
                        <input
                            type="text"
                            name="email"
                            required
                            class="applyInput w-100"
                        />
                        <div class="applyLabel">Email</div>
                    </div>
                    <div class="w-100">
                        <input
                            type="number"
                            minlength="10"
                            name="number"
                            required
                            class="applyInput w-100"
                        />
                        <div class="applyLabel">Number</div>
                    </div>
                    <div class="w-100">
                        <input
                            type="text"
                            required
                            name="address"
                            class="applyInput w-100"
                        />
                        <div class="applyLabel">Address</div>
                    </div>
                    <button class="btn btn-three" type="submit">Apply</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('footer.ejs') %>
